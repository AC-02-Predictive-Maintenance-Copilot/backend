generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ERole {
  ADMIN
  ENGINEER
}

enum EPriority {
  LOW
  MEDIUM
  HIGH
}

enum EStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

model Machine {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  productId String @unique @map("product_id")
  name      String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relasi ke tabel MachineStatus
  statuses MachineStatus[]

  // Relasi ke tabel Ticket
  tickets Ticket[]

  @@map("machines")
}

model MachineStatus {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  machineId          String   @map("machine_id")
  type               String
  airTemperature     Float    @map("air_temperature")
  processTemperature Float    @map("process_temperature")
  rotationalSpeed    Int      @map("rotational_speed")
  torque             Float
  toolWear           Int      @map("tool_wear")
  target             Int
  failureType        String?  @map("failure_type")
  recordedAt         DateTime @default(now()) @map("recorded_at")

  // Relasi ke Machine
  machine Machine @relation(fields: [machineId], references: [id])

  machineAnalysis MachineAnalysis[]

  @@map("machine_statuses")
}

model MachineAnalysis {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  statusId        String  @map("status_id")
  healthScore     Int     @map("health_score")
  riskProbability Float   @map("risk_probability")
  status          String
  diagnosis       String
  isAnomaly       Boolean @map("is_anomaly")
  llmPrompt       String  @map("llm_prompt")
  llmResponse     String  @map("llm_response")

  createdAt DateTime @default(now()) @map("created_at")

  machineStatus MachineStatus @relation(fields: [statusId], references: [id])

  @@map("machine_analysis")
}

model Ticket {
  id            String    @id @map("_id")
  ticketNumber  Int       @default(0) @map("ticket_number")
  machineId     String    @map("machine_id")
  problem       String
  priority      EPriority
  status        EStatus
  problemDetail String    @map("problem_detail")
  isPublished   Boolean   @default(false) @map("is_published")

  // Relasi ke Machine
  machine Machine @relation(fields: [machineId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tickets")
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  username   String  @unique
  email      String  @unique
  password   String
  isVerified Boolean @default(false) @map("is_verified")
  role       ERole   @default(ENGINEER)
  picture    String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
